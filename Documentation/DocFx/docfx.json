{
  "metadata": [
    {
      "src": [
        {
          "src": "../../Runtime",
          "files": ["**/*.cs"],
          "exclude": ["**/Plugins/**"]
        }
      ],
      "force": true,
      "globalNamespaceId": "Global",
      "filter": "filterConfig.yml",
      "dest": "api",
      "allowCompilationErrors": true
    }
  ],
  "build": {
    "globalMetadata": {
      "_appTitle": "Gaming Couch - Unity integration docs",
      "_appFooter": "Thanks for reading the whole documentation!",
      "_enableSearch": true
    },
    "content": [
      {
        "files": ["toc.yml", "index.md"]
      },
      {
        "src": "api",
        "files": ["*.yml"],
        "output": "api"
      },
      {
        "src": "manual",
        "files": ["toc.yml", "*.md"],
        "output": "manual"
      }
    ],
    "overwrite": [
      {
        "src": "../..",
        "files": ["Runtime/Scripts/*.md", "Runtime/Scripts/**/*.md"]
      }
    ],
    "resource": [
      {
        "files": ["resources/**/*"]
      }
    ],
    "sitemap": {
      "baseUrl": "https://deadsetbit.github.io/gaming-couch-unity",
      "changefreq": "weekly",
      "fileOptions": {
        "api/*": {
          "changefreq": "daily"
        }
      }
    },
    "xref": ["https://normanderwan.github.io/UnityXrefMaps/xrefmap.yml"],
    "xrefService": ["https://xref.docs.microsoft.com/query?uid={uid}"],
    "dest": "_site",
    "template": ["default", "modern"]
  }
}
